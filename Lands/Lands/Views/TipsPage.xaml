<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             x:Class="Lands.Views.TipsPage"
             Title="Tips">
    <ContentPage.Content>
        <ScrollView BindingContext="{Binding M_Views}">
            <StackLayout Padding="5">
                <Label 
                    FontSize="Large"
                    FontAttributes="Bold"
                    Text="{Binding M_Views.Titulo}"
                    TextColor="Black"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>