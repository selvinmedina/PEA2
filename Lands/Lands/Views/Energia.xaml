<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             x:Class="Lands.Views.Energia"
             Title="Energia"
             >

    <ContentPage.Content>
        <ScrollView>
            <StackLayout
            BindingContext="{Binding Energia}"
            Padding="5">
                <ImageButton
                    x:Name="BtnAgregar"
                    Source="Agregarxhdi.png"
                    MinimumHeightRequest="20"
                    Command="{Binding AgregarObjeto}"                    
                    VerticalOptions="End">
                </ImageButton>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>

</ContentPage>