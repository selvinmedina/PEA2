<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:tabs="clr-namespace:Lands.Views"
            BindingContext="{Binding Main, Source={StaticResource Locator}}"
             x:Class="Lands.Views.Pagina"
            Title="PEA(BETA)">
  <!--Pages can be added as references or inline-->
    <TabbedPage.Children 
        BindingContext="{Binding Pagina}">
        <tabs:Derivados
            BindingContext="{Binding Derivados}"/>
        <tabs:Energia
            BindingContext="{Binding Energia}"/>
        <tabs:TipsAhorro
            BindingContext="{Binding Tips}"/> <!--BindingContext = new ViewModelTips();-->
    </TabbedPage.Children>
</TabbedPage>