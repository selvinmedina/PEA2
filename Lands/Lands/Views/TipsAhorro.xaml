<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BindingContext="{Binding Tips, Source={StaticResource Locator}}"
             x:Class="Lands.Views.TipsAhorro"
             Title="Tips de Ahorro">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="Titulo" TargetType="Label">
                <Setter Property="FontSize" Value="50"/>
                <Setter Property="TextColor" Value="#142FEA"/>

            </Style>
            <Style x:Key="Parrafo" TargetTipe="Label">
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="TextColor" Value="#000000"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="5">
                <Label Text="Hola"
                       Style="Titulo"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>